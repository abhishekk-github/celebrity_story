<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:id="@+id/item_card"
    style="@style/MatarialCardViewListStyle">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:id="@+id/item_imageView"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <RelativeLayout
        android:id="@+id/rl_holder"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/item_imageView"
        android:layout_alignParentStart="true">

      <TextView
          android:text="1000 Likes"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/item_likes"
          android:layout_centerVertical="true"
          android:layout_alignParentStart="true"
          android:layout_marginStart="11dp"/>
      <TextView
          android:text="Title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/item_title"
          android:textStyle="bold"
          android:lines="1"
          android:ellipsize="end"
          android:layout_marginTop="4dp"
          android:layout_above="@+id/item_likes"
          android:layout_alignStart="@+id/item_likes"/>
      <TextView
          android:text="50 comments"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/item_comment"
          android:layout_marginLeft="12dp"
          android:layout_marginEnd="11dp"
          android:layout_centerVertical="true"
          android:layout_alignParentEnd="true"/>
    </RelativeLayout>
  </RelativeLayout>
</android.support.v7.widget.CardView>